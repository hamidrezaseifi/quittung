<GridPane alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.seifi.quittung.controllers.MainController" prefWidth="1000" prefHeight="1000">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="40" vgrow="NEVER" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>
    <children>
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="10">
            <Button styleClass="home-button" text="Home" onAction="#showHome" prefWidth="116" prefHeight="36" alignment="CENTER_RIGHT"></Button>
            <Button styleClass="bill-button" text="Quittung" onAction="#showQuittung" prefWidth="116" prefHeight="36" alignment="CENTER_RIGHT"></Button>
            <Button styleClass="report-button" text="Bericht" onAction="#showReport" prefWidth="116" prefHeight="36" alignment="CENTER_RIGHT"></Button>
            <Button styleClass="admin-button" text="Verwaltung" onAction="#showAdmin" prefWidth="116" prefHeight="36" alignment="CENTER_RIGHT"></Button>
            
        </HBox>

        <GridPane GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="childBox">
		     <columnConstraints>
		        <ColumnConstraints hgrow="ALWAYS" />
		    </columnConstraints>
		    <rowConstraints>
		        <RowConstraints vgrow="ALWAYS" />
		    </rowConstraints>
            
        </GridPane>

        
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</GridPane>